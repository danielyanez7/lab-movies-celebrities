<div class="container p-5">
    <div class="row justify-content-center">

        <div class="col-5 ">
            <h2 class="text-center">Movie Details</h2>
            <div class="card text-center">

                <div class="card-body text-start">
                    <p class="card-text"><b>Title:</b> {{title}}</p>
                    <p class="card-text"><b>Genre:</b> {{genre}}</p>
                    <p class="card-text"><b>Plot:</b> {{plot}}</p>
                    <p class="card-text m-0"><b>Cast:</b>
                    <ul class="list-unstyled">
                        {{#each cast}}
                        <li class="mx-4">
                            <ul class="list">
                                <li class="mx-4">
                                    <b>Name:</b> {{name}}
                                </li>
                                <li class="mx-4">
                                    <b>Occupation:</b> {{occupation}}
                                </li>
                                <li class="mx-4">
                                    <b>Catchphrase:</b> {{catchPhrase}}
                                </li>
                            </ul>
                            <hr>

                        </li>
                        {{/each}}
                    </ul>

                    <form action="/movies/{{id}}/delete" method="post">
                        <td><a href="/movies/{{id}}/edit" class="btn btn-dark">Edit</a></td>
                        <input type="submit" class="btn btn-danger" value="Delete">
                        <td><a href="/movies" class="btn btn-warning">Go Back</a></td>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>